  global $user;

  $link = '';
  if ($uid > 0) {

    $link = '<a href="javascript: void(0)" id="hide-legend-row' . $i . '" OnClick="javascript: ';

    if ($user->uid == $uid) {
      $link .= "hideLineSeries($uid, $i, '$username', '$meter', '" . t('Hide') . "', '" . t('Show') . "', '$context');\">" .
      ($visible ? t('Hide') : t('Show'));
