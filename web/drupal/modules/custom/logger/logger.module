function logger_query_device_measurements($interval, $start, $device, $offset) {

  $sql = "SELECT m.meter FROM {logger_meters} m WHERE m.device = '%s'";
  $sensors = db_query($sql, $device);
  $measurements = array();

  $exported_cdef = "meter";
  $factor = 3600;

  while($sensor = db_fetch_object($sensors)) {

    $file_path = drupal_get_path('module', 'logger') . '/data/base/' . $sensor->meter . ".rrd" ;

    $def = "DEF:data$exported_cdef=" . "$file_path:meter:AVERAGE " .
      "CDEF:$exported_cdef=" . "data$exported_cdef," . $factor . ",* ";

    $measurements[$sensor->meter] = logger_query_measurements($interval, $start, $def, $exported_cdef, $offset);
  }
  return $measurements;
}

/**
 * Queries the RRDTool databases for sensors' measurements.
 *
 * @param $interval       The time interval.
 * @param $start          The start time.
 * @param $def            The rrd def tag.
 * @param $exported_cdef  The exported cdef.
 * @return the array of sensors' measurements.
 */
function logger_query_measurements($interval, $start, $def, $exported_cdef, $offset) {

  if (!$def) {
    return array();
  }

  $maxrows = array('hour' => 120, 'night' => 60, 'day' => 96, 'month' => 60, 'year' => 60);
  $step    = array('hour' => 1,   'night' => 1,  'day' => 1,  'month' => 1,  'year' => 604800);

  $command = RRDTOOL . ' xport ' .
    "--start $start " .
    "--step $step[$interval] " .
    "--maxrows $maxrows[$interval] " .
    "$def " .
    "XPORT:$exported_cdef";

  exec($command, $lines);

  foreach($lines as $line) {
    $line = strtolower($line);

    if (strpos($line, '<row>') > 0) {

      $line = str_replace(array('<row><t>', '</v></row>'), '',  $line);
      $line = str_replace('</t><v>', ':', $line);
      $div_pos = strpos($line, ':');

      $timestamp = trim(substr($line, 0, $div_pos)) + $offset;
      $value     = trim(substr($line, $div_pos + 1));

      $data[$timestamp] = $value == 'nan'? null: $value;
    }
  }
  return $data;
}

/**
 * Creates RRD tags to represent the series of measurements performed by a single sensor.
 *
 * @param $series_id  The series' id.
 * @param $chart      The chart parameters.
 * @param $sensor     The sensor being ploted.
 * @return the RRD DEF tag.
 */
function _logger_chart_sensor_data_series($series_id, $chart, $sensor) {

  global $user;

  if($sensor->private > 0 && $sensor->uid != $user->uid) {
    return null;
  }

  $file_path = $chart->data_path . "/" . $sensor->meter . ".rrd" ;

  return "DEF:data$series_id="   . "$file_path:meter:AVERAGE " .
    "CDEF:$series_id=" . "data$series_id," . $chart->factor . ",* ";
}

/**
 * Creates DEF and CDEF tags to represent the series of aggregated consumption.
 * 
 * @param $series_id   The series' id.
 * @param $chart       The chart parameters.
 * @param $sensors     The array of sensors to be aggregated.
 * @return the DEF and CDEF tags. 
 */
function _logger_chart_agg_data_series($series_id, $chart, $sensors) {

  //Latest measurements are not considered, in order to tolerate heartbeat delays.
  $end_time = time() - 30 * MINUTE;
  $def = "";
  $variables = "";

  $i = 1;
  foreach ($sensors as $sensor) {

    $sensor_cdef = "meter$i";

    $def .= _logger_chart_sensor_data_series($sensor_cdef, $chart, $sensor) .

      //Considers unknown measurements to be zero
      "CDEF:completeseries$i=" . "$sensor_cdef,UN,0,$sensor_cdef,IF " .

      //Do not consider latest 30 minutes
      "CDEF:filtered$i=TIME,$end_time,GT,UNKN,completeseries$i,IF ";

    $variables .= ($i > 1 ? ',' : '') . "filtered$i";
    $i++;
  }

  $operators = str_repeat(",+", count($sensors) - 1);

  //Sum all measurements of a particular time
  $def .= "CDEF:$series_id=$variables$operators ";
  
  return $def;
}

function logger_cron() {

  $intervals = array('hour', 'day', 'month', 'year', 'night');

  //Delete png files older than 30 minutes.
  //This limit prevents chart files from being removed before they are sent to the user.

  foreach($intervals as $interval) {

    exec('find ' . GRAPH_PATH . "/$interval/*"  . ' -mmin +30 -exec rm {} \;');
  }
}