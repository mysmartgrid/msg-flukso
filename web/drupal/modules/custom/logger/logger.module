    $sql = "
      SELECT
        n.nid,
        n.title,
        n.created
      FROM
        {node} n
      WHERE
        n.type = :type AND
        n.status = :status
      ORDER BY
        n.created DESC";

    $result = db_query_range($sql, 0, 5, array('type' => 'blogpost', ':status' => 1));
    
