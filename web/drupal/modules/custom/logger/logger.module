    $sql = "
      SELECT
        t.id,
        t.name
      FROM
        {logger_meter_type} t,
        {logger_meters} m
      WHERE
        m.type = t.id AND
        m.uid = %d
      ORDER BY
        t.id";

      $result = db_query($sql, $uid);

