/**
 * Creates the chart legend.
 *
 * @param $data   The series data.
 * @param $colors The series colors.
 * @return the chart legend as a table.
 */
function _logger_create_graph_legend($data, $colors) {

  function _format($value) {
    return $value > 0? number_format($value, 2) : '';
  }

  $i = 0;
  foreach($data as $user => $sensors) {
    foreach($sensors as $sensor => $measurements) {

      $total = 0;
      $last = 0;
      $max = 0;
      $min = null;
      $sum = 0;
      $avg = 0;
      
      foreach($measurements as $timestamp => $value) {
        if ($value) {
          $total++;
          $last = $value;
          $max = $value > $max? $value: $max;
          $min = !$min || $value < $min? $value: $min;
          $sum += $value;
        }
      }
      $avg = $total > 0? $sum / $total : 0;

      $color = $colors[$i % count($colors)];

      $id = SERIES_COLOR_ID . $i;
      $mark = '<input class="color {valueElement:' . "'$id'" . '} type="button"
        style="width: 10px; height: 10px;"/>
        <input id="' . $id . '" type="hidden" value="' . $color . '"
        onchange="document.cookie=' . "'$id'" . " + '=#' + escape(this.value) + ';path=/';" .
        'document.location=document.location;"/>';

      $lines[] = array(
          'mark'   => $mark,
          'user'   => $user,
          'sensor' => $sensor,
          'max'    => _format($max),
          'min'    => _format($min),
          'avg'    => _format($avg),
          'last'   => _format($last)
      );
      $i++;
    }
  }

  $headers = array(
    array('data'  => t('Color'),  'field' => 'mark'),
    array('data'  => t('User'),   'field' => 'user'),
    array('data'  => t('Sensor'), 'field' => 'sensor'),
    array('data'  => t('Max'),    'field' => 'max'),
    array('data'  => t('Min'),    'field' => 'min'),
    array('data'  => t('Avg'),    'field' => 'avg'),
    array('data'  => t('Last'),   'field' => 'last')
  );

  return '<br>' . theme('table', $headers, $lines);
}

