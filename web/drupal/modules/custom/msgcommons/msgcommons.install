/**
 * Makes a directory for storing forecasts.
 */
function msgcommons_update_7001() {

  $dir = drupal_get_path('module', 'msgcommons');
  mkdir("$dir/tmp", 0777, TRUE);

  return st('Directory successfully created.');
}

