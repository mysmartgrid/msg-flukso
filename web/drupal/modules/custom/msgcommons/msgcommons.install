<?php

/**
 * @file
 * Install, update and uninstall functions for the msgcommon module.
 */

function msgcommons_install() {

  $dir = drupal_get_path('module', 'msgcommons');
  mkdir("$dir/tmp", 0777, TRUE);
}

function msgcommons_uninstall() {

  $dir = drupal_get_path('module', 'msgcommons');
  rmdir("$dir/tmp");
}

